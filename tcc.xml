<?xml version="1.0" encoding="UTF-8"?>
<project name="tcc-fatec" default="all">
  
  
  <property file="tcc.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8_162" value="${jdk.home.1.8_162}/bin"/>
  <path id="jdk.classpath.1.8_162">
    <fileset dir="${jdk.home.1.8_162}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8_162}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8_162}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8_162"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.jfoenix-1.9.1.classpath">
    <pathelement location="${basedir}/lib/jfoenix-1.9.1.jar"/>
  </path>
  
  <path id="library.mysql-connector-java-6.0.6.classpath">
    <pathelement location="${basedir}/lib/mysql-connector-java-6.0.6.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module tcc-reborn -->
  
  <dirname property="module.tcc-reborn.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.tcc-reborn" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tcc-reborn" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tcc-reborn" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tcc-reborn" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="tcc-reborn.output.dir" value="${module.tcc-reborn.basedir}/target/classes"/>
  <property name="tcc-reborn.testoutput.dir" value="${module.tcc-reborn.basedir}/target/test-classes"/>
  
  <path id="tcc-reborn.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tcc-reborn.module.production.classpath">
    <path refid="${module.jdk.classpath.tcc-reborn}"/>
    <path refid="library.jfoenix-1.9.1.classpath"/>
    <path refid="library.mysql-connector-java-6.0.6.classpath"/>
  </path>
  
  <path id="tcc-reborn.runtime.production.module.classpath">
    <pathelement location="${tcc-reborn.output.dir}"/>
    <path refid="library.jfoenix-1.9.1.classpath"/>
    <path refid="library.mysql-connector-java-6.0.6.classpath"/>
  </path>
  
  <path id="tcc-reborn.module.classpath">
    <path refid="${module.jdk.classpath.tcc-reborn}"/>
    <pathelement location="${tcc-reborn.output.dir}"/>
    <path refid="library.jfoenix-1.9.1.classpath"/>
    <path refid="library.mysql-connector-java-6.0.6.classpath"/>
  </path>
  
  <path id="tcc-reborn.runtime.module.classpath">
    <pathelement location="${tcc-reborn.testoutput.dir}"/>
    <pathelement location="${tcc-reborn.output.dir}"/>
    <path refid="library.jfoenix-1.9.1.classpath"/>
    <path refid="library.mysql-connector-java-6.0.6.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.tcc-reborn">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tcc-reborn">
    <patternset refid="excluded.from.module.tcc-reborn"/>
  </patternset>
  
  <path id="tcc-reborn.module.sourcepath">
    <dirset dir="${module.tcc-reborn.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tcc-reborn" depends="compile.module.tcc-reborn.production,compile.module.tcc-reborn.tests" description="Compile module tcc-reborn"/>
  
  <target name="compile.module.tcc-reborn.production" depends="register.custom.compilers" description="Compile module tcc-reborn; production classes">
    <mkdir dir="${tcc-reborn.output.dir}"/>
    <javac2 destdir="${tcc-reborn.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tcc-reborn}/javac">
      <compilerarg line="${compiler.args.tcc-reborn}"/>
      <bootclasspath refid="tcc-reborn.module.bootclasspath"/>
      <classpath refid="tcc-reborn.module.production.classpath"/>
      <src refid="tcc-reborn.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tcc-reborn"/>
    </javac2>
    
    <copy todir="${tcc-reborn.output.dir}">
      <fileset dir="${module.tcc-reborn.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.tcc-reborn.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tcc-reborn.tests" depends="register.custom.compilers,compile.module.tcc-reborn.production" description="compile module tcc-reborn; test classes" unless="skip.tests"/>
  
  <target name="clean.module.tcc-reborn" description="cleanup module">
    <delete dir="${tcc-reborn.output.dir}"/>
    <delete dir="${tcc-reborn.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.tcc-reborn, clean.artifact.tcc-reborn" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.tcc-reborn" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.tcc-reborn" value="${basedir}/classes/artifacts/tcc_reborn"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.tcc_reborn" value="${artifacts.temp.dir}/tcc_reborn.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8_162}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.tcc-reborn" description="clean tcc-reborn artifact output">
    <delete dir="${artifact.output.tcc-reborn}"/>
  </target>
  
  <target name="artifact.tcc-reborn" depends="init.artifacts, compile.module.tcc-reborn" description="Build &#39;tcc-reborn&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.tcc-reborn}"/>
    <copy todir="${artifact.temp.output.tcc_reborn}">
      <fileset dir="${tcc-reborn.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.temp.output.tcc_reborn}/META-INF"/>
    <copy file="${basedir}/src/main/java/app/META-INF/MANIFEST.MF" tofile="${artifact.temp.output.tcc_reborn}/META-INF/MANIFEST.MF"/>
    <unzip src="${basedir}/lib/jfoenix-1.9.1.jar" dest="${artifact.temp.output.tcc_reborn}"/>
    <unzip src="${basedir}/lib/mysql-connector-java-6.0.6.jar" dest="${artifact.temp.output.tcc_reborn}"/>
    <fx:fileset id="all_but_tcc_reborn" dir="${artifact.temp.output.tcc_reborn}" includes="**/*.jar">
      <exclude name="tcc_reborn.jar"/>
    </fx:fileset>
    <fx:fileset id="all_tcc_reborn" dir="${artifact.temp.output.tcc_reborn}" includes="**/*.jar"/>
    <fx:application id="tcc_reborn_id" name="tcc-reborn" mainClass="app.Main"/>
    <fx:jar destfile="${artifact.temp.output.tcc_reborn}/tcc_reborn.jar">
      <fx:application refid="tcc_reborn_id"/>
      <fileset dir="${artifact.temp.output.tcc_reborn}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_tcc_reborn"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value=""/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value=""/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.tcc_reborn}/deploy" outfile="tcc_reborn">
      <fx:application refid="tcc_reborn_id"/>
      <fx:resources>
        <fx:fileset refid="all_tcc_reborn"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.tcc-reborn}">
      <fileset dir="${artifact.temp.output.tcc_reborn}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.tcc_reborn}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.tcc-reborn" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>